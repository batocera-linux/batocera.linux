# omxplayer needs pgrep
CONFIG_PGREP=y

# usb mounts
CONFIG_FEATURE_BLKID_TYPE=y
CONFIG_FEATURE_VOLUMEID_NTFS=y

# locale
CONFIG_LOCALE_SUPPORT=y

# x86 to mount sd partitions by label
CONFIG_FEATURE_MOUNT_LABEL=y
CONFIG_RDEV=y

CONFIG_STAT=y
CONFIG_MODINFO=y

# timeout commands, such as ping in es
CONFIG_TIMEOUT=y

# for users file transfers
CONFIG_NC=y
CONFIG_NC_SERVER=y
