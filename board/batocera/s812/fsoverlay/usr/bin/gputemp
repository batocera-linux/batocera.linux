if [ -f /sys/class/thermal/thermal_zone1/temp ]; then
   TEMP="$(cat /sys/class/thermal/thermal_zone1/temp)"
else
   TEMP="$(cat /sys/class/thermal/thermal_zone0/temp)"
fi
echo "$(( $TEMP / 1000 )) C"
