# Rules for USBmount -*- conf -*-

KERNEL=="sd*",     DRIVERS=="sbp2",    ACTION=="add",    RUN+="/recalbox/scripts/batocera-usbmount.sh add"
KERNEL=="sd*",     SUBSYSTEM=="block", ACTION=="add",    RUN+="/recalbox/scripts/batocera-usbmount.sh add"
KERNEL=="ub*",     SUBSYSTEM=="block", ACTION=="add",    RUN+="/recalbox/scripts/batocera-usbmount.sh add"
KERNEL=="mmcblk*", SUBSYSTEM=="block", ACTION=="add",    RUN+="/recalbox/scripts/batocera-usbmount.sh add"
KERNEL=="sd*",                         ACTION=="remove", RUN+="/recalbox/scripts/batocera-usbmount.sh remove"
KERNEL=="ub*",                         ACTION=="remove", RUN+="/recalbox/scripts/batocera-usbmount.sh remove"
KERNEL=="mmcblk*",                     ACTION=="remove", RUN+="/recalbox/scripts/batocera-usbmount.sh remove"
