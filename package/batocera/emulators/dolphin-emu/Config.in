	select BR2_PACKAGE_QT5BASE_WIDGETS	if BR2_PACKAGE_BATOCERA_TARGET_X86_64
	select BR2_PACKAGE_QT5BASE_GIF		if BR2_PACKAGE_BATOCERA_TARGET_X86_64
	select BR2_PACKAGE_QT5BASE_JPEG		if BR2_PACKAGE_BATOCERA_TARGET_X86_64
	select BR2_PACKAGE_QT5BASE_PNG		if BR2_PACKAGE_BATOCERA_TARGET_X86_64
	help
	  Gamecube/Wii emulator

	comment "DOLPHIN_EMU needs a toolchain w/ C++, OpenGL"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_PACKAGE_HAS_LIBGL
