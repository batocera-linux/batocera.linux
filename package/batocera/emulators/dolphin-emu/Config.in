	select BR2_PACKAGE_LIBEVDEV
	select BR2_PACKAGE_FFMPEG
	select BR2_PACKAGE_ZLIB
	select BR2_PACKAGE_XZ
	select BR2_PACKAGE_LIBPNG
	select BR2_PACKAGE_LZO
	select BR2_PACKAGE_LIBUSB
	select BR2_PACKAGE_LIBDRM 		if BR2_PACKAGE_BATOCERA_TARGET_ODROIDN2 || BR2_PACKAGE_BATOCERA_TARGET_VIM3
	select BR2_PACKAGE_LIBCURL
	select BR2_PACKAGE_BLUEZ5_UTILS
	select BR2_PACKAGE_HIDAPI
	select BR2_PACKAGE_QT5_VERSION_LATEST	if BR2_PACKAGE_BATOCERA_TARGET_X86_64
	select BR2_PACKAGE_QT5			if BR2_PACKAGE_BATOCERA_TARGET_X86_64
	select BR2_PACKAGE_QT5BASE		if BR2_PACKAGE_BATOCERA_TARGET_X86_64
