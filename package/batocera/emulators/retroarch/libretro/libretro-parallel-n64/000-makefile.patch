+      # ODROIDGOA
+      else ifneq (,$(findstring ODROIDGOA,$(BOARD)))
+      CPUFLAGS += -mcpu=cortex-a35 -mtune=cortex-a35         
       else
          # ODROID-U3, U2, X2 & X
          CPUFLAGS += -mcpu=cortex-a9 -mfpu=neon
