+		    }
+		  }
+		}
+		udev_device_unref(dev);
+	      }
+	    }
+	    udev_enumerate_unref(enumerate);
+	  }
+	  if (udev != NULL) udev_unref(udev);
+
+	  // configure
+	  us->udev_fd = fd;
+	  if(fd != -1) {
+	    udev_configure_gun(us);
+	  }
+	}
