+	int event_isNumber(const char *s) {
+	  int n;
+
+	  if(strlen(s) == 0) {
+	    return 0;
+	  }
+
+	  for(n=0; n<strlen(s); n++) {
+	    if(!(s[n] == '0' || s[n] == '1' || s[n] == '2' || s[n] == '3' || s[n] == '4' ||
