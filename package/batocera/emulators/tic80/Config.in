config BR2_PACKAGE_TIC80
	bool "tic80"
	depends on BR2_PACKAGE_SDL2
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_TOOLCHAIN_HAS_THREADS
	depends on !BR2_STATIC_LIBS
	select BR2_PACKAGE_ZLIB
	help
	  TIC-80 is a fantasy computer for making, playing and 
	  sharing tiny games.
	  
	  Standalone version (not libretro core).

	  https://tic80.com

comment "tic80 needs SDL2 and a toolchain w/ C++, threads, dynamic library"
	depends on !BR2_PACKAGE_SDL2 || !BR2_INSTALL_LIBSTDCPP || \
		!BR2_TOOLCHAIN_HAS_THREADS || BR2_STATIC_LIBS
