#!/bin/sh

CONFIGFILE=/boot/config.txt

setup_rpi1="# ====== GPi Case setup section =====
dtoverlay=dpi24_gpicase
dtoverlay=pwm-audio-pi-zero_gpicase
display_rotate=1
overscan_left=0
overscan_right=0
overscan_top=0
overscan_bottom=0
framebuffer_width=320
framebuffer_height=240
enable_dpi_lcd=1
display_default_lcd=1
dpi_group=2
dpi_mode=87
dpi_output_format=0x6016
#hdmi_timings=320 0 28 18 28 480 0 2 2 4 0 0 0 60 0 32000000 6
hdmi_timings=240 1 38 10 20 320 1 20 4 4 0 0 0 60 0 6400000 1
dtoverlay=pwm-2chan_gpicase,pin=18,func=2,pin2=19,func2=2
disable_pvt=1
disable_audio_dither=1
# ====== GPi Case toggle section =====
# This will preserve always the default GPi settings if enabled, needed if some values were wrong setted by user"

setup_rpi4="# ====== GPiMate Plus setup section =====
dtoverlay=dpi24_gpicase
dtoverlay=disable-pcie
dtoverlay=dwc2,dr_mode=host
dtoverlay=audremap,pins_18_19
dtoverlay=vc4-fkms-v3d
audio_pwm_mode=2
overscan_left=0
overscan_right=0
overscan_top=0
overscan_bottom=0
enable_dpi_lcd=1
display_default_lcd=1
dpi_group=2
dpi_mode=87
dpi_output_format=0x6016
#hdmi_timings=320 0 28 18 28 480 0 2 2 4 0 0 0 60 0 32000000 6
hdmi_timings=240 1 38 10 20 320 1 20 4 4 0 0 0 60 0 6400000 1
hdmi_ignore_hotplug=1
hdmi_ignore_edid=0xa5000080
hdmi_edid_file=1
disable_pvt=1
disable_audio_dither=1
# ====== GPiMate Plus toggle section =====
# This will preserve always the default GPi settings if enabled, needed if some values were wrong setted by user"

    CONFIGMODIFIED=0

    if /usr/bin/batocera-info  | grep "Architecture: rpi4"; then
        setup="${setup_rpi4}"
    else
        setup="${setup_rpi1}"
    fi

    echo "${setup}" | (
	while read LINE
	do
	    if ! grep -qE "^${LINE}$" "${CONFIGFILE}"
	    then
		test "${CONFIGMODIFIED}" = 0 && mount -o remount,rw /boot
		echo "${LINE}" >> "${CONFIGFILE}"
		CONFIGMODIFIED=1
	    fi
	done

	#Reboot if there was a change in line
	if test "${CONFIGMODIFIED}" = 1
	then
            echo "Rebooting now..."
            shutdown -r now
	fi
    )

exit 0
