enabled="$(batocera-settings -command load -key controllers.bluetooth.enabled)"
gamepad="$(ls /dev/input/by-path/ | grep "joystick" 2>/dev/null | wc -l)"

if [ "$enabled" == "1" ]; then

        if [ "$gamepad" == "0" ]; then
        curl --data "Running Bluetooth Connection" 127.0.0.1:1234/notify
        batocera-bluetooth trust $1 &
        wait $! && exit 1
        fi
fi
