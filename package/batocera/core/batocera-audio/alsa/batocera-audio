#!/bin/sh

do_usage() {
	echo "$1 list"
	echo "$1 get"
	echo "$1 set {auto|<device>}"
	echo "$1 test"
}	

do_select_audiodevice() {
	if echo "${MODE}" | grep -qE '^[0-9]*'; then
		SINK_ID="$(echo "$MODE" | sed -e"s/^\([0-9]*\).*/\1/")"
		pactl set-default-sink "${SINK_ID}"
	else
		# No valid device selected
		return 1
	fi
}

ACTION="$1"

case "${ACTION}" in
	list)
		printf '%s %s\n' "auto" "auto"
		pactl list short sinks | sed -e"s%\(^[0-9]*\)\s.*alsa_output.*output_\(\S*\)\s.*%\1 \2%"
	;;

	get)
	    # get the running device
	    pactl list short sinks | grep -E 'RUNNING$' | sed -e"s%\(^[0-9]*\)\s.*alsa_output.*output_\(\S*\)\s.*%\1%"
	;;

	set)
		MODE="$2"
		case "${MODE}" in
			# auto: no .asoundrc
			# custom: don't touch .asoundrc
			# any other, create .asoundrc
			auto)
				# do nothing!
			;;
			*)
				do_select_audiodevice
		esac
	;;

	test)
		aplay "/usr/share/sounds/Mallet.wav"
	;;
	*)
		do_usage $(basename $0)
esac
