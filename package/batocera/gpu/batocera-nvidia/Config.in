config BR2_PACKAGE_BATOCERA_NVIDIA
    bool "batocera-nvidia"

    depends on BR2_PACKAGE_XSERVER_XORG_SERVER

    # drivers
    select BR2_PACKAGE_BATOCERA_NVIDIA_DRIVER           # the last driver
    select BR2_PACKAGE_BATOCERA_NVIDIA_LEGACY_DRIVER    # the legacy driver
    select BR2_PACKAGE_BATOCERA_NVIDIA390_LEGACY_DRIVER # the legacy driver 390
    # select BR2_PACKAGE_BATOCERA_NVIDIA340_LEGACY_DRIVER

    # xorg
    select BR2_PACKAGE_BATOCERA_NVIDIA_DRIVER_XORG
    select BR2_PACKAGE_BATOCERA_NVIDIA_LEGACY_DRIVER_XORG
    select BR2_PACKAGE_BATOCERA_NVIDIA390_LEGACY_DRIVER_XORG
    #select BR2_PACKAGE_BATOCERA_NVIDIA340_LEGACY_DRIVER_XORG

    # kernel modules
    select BR2_PACKAGE_BATOCERA_NVIDIA_DRIVER_MODULE
    select BR2_PACKAGE_BATOCERA_NVIDIA_LEGACY_DRIVER_MODULE
    select BR2_PACKAGE_BATOCERA_NVIDIA390_LEGACY_DRIVER_MODULE
    #select BR2_PACKAGE_BATOCERA_NVIDIA340_LEGACY_DRIVER_MODULE

    select BR2_PACKAGE_BATOCERA_NVIDIA_LISTS            # the cards lists / mapping to drivers

    help
      This package a switch between the different nvidia drivers
