config BR2_PACKAGE_BATOCERA_EMULATIONSTATION
        bool "batocera Emulationstation"
	depends on BR2_INSTALL_LIBSTDCPP
	select BR2_PACKAGE_SDL2
	select BR2_PACKAGE_SDL2_MIXER
	select BR2_PACKAGE_ALSA_LIB
	select BR2_PACKAGE_ALSA_UTILS_AMIXER
	depends on (BR2_PACKAGE_HAS_LIBGLES || BR2_PACKAGE_HAS_LIBGL)
	select BR2_PACKAGE_LIBFREEIMAGE
	select BR2_PACKAGE_FREETYPE
	select BR2_PACKAGE_DEJAVU
	select BR2_PACKAGE_OPENSSL
	select BR2_PACKAGE_LIBCURL
	select BR2_PACKAGE_NANUM_FONT
	select BR2_PACKAGE_FPING
	select BR2_PACKAGE_BATOCERA_EMULATIONSTATION_FONTS
	select BR2_PACKAGE_VLC
	select BR2_PACKAGE_OMXPLAYER if BR2_PACKAGE_RPI_USERLAND
	select BR2_PACKAGE_RAPIDJSON
	select BR2_PACKAGE_POPPLER
        help
          A multi emulator frontend.

	  https://github.com/Aloshi/EmulationStation

if BR2_PACKAGE_BATOCERA_EMULATIONSTATION
choice
    prompt "ES version to compile"
    config BR2_PACKAGE_BATOCERA_EMULATIONSTATION_STANDARD
          bool "standard"
    config BR2_PACKAGE_BATOCERA_EMULATIONSTATION_ARCADE
          bool "arcade"
 endchoice
endif

comment "Emulation station 2 needs a toolchain w/ C++"
